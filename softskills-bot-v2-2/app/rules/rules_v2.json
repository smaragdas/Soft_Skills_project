      "med":  [3.5, 5, 6.5],
      "high": [5.5, 7.5, 10, 10]
    }
  },

  "rules": [
    { "if":[{"var":"clarity","is":"high"},{"var":"coherence","is":"med"}], "then":{"var":"Linguistic_Clarity","is":"high"} },
