      "teamwork":        { "Knowledge_Decision": 0.3, "Content_Structure": 0.4, "Delivery_Presence": 0.3 },
      "problem_solving": { "Knowledge_Decision": 0.6, "Content_Structure": 0.2, "Delivery_Presence": 0.2 }
